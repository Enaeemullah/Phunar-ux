{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": "./src",
    "paths": {
      "~/assets/*": ["assets/*"],
      "~/types/*": ["types/*"],
      "~/context/*": ["context/*"],
      "~/components/*": ["components/*"],
      "~/collections/*": ["collections/*"],
      "~/data/*": ["data/*"],
      "~/hooks/*": ["hooks/*"],
      "~/services/*": ["services/*"],
      "~/styles/*": ["styles/*"],
      "~/utils/*": ["utils/*"]
    },
    "allowJs": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "target": "esnext",
    "jsx": "preserve",
    "skipLibCheck": true
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
